<Window x:Class="Ershik.Add_Phrase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ershik"
        mc:Ignorable="d"
        Background="#FF2B0061"
        Title="Добавление фразы" Height="250" Width="400">
    <Grid>
        <Button x:Name="Add" Style="{DynamicResource RoundedButtonStyle}" Content="Сохранить" HorizontalAlignment="Left" Margin="34,170,0,0" VerticalAlignment="Top" Click="Add_Phrase_Click" Height="32" Width="77"/>
        <Button x:Name="Cancel" Style="{DynamicResource RoundedButtonStyle}" Content="Отмена" HorizontalAlignment="Left" Margin="273,169,0,0" VerticalAlignment="Top" Width="41" Click="Cancel_Click" Height="33"/>
        <TextBox x:Name="Phrase" HorizontalAlignment="Left" Margin="34,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="36" FontSize="25"/>
        <TextBox x:Name="Desc" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="37" Margin="34,123,0,0"/>
        <Label Content="Фраза" HorizontalAlignment="Left" Margin="34,25,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="34,96,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</Window>
